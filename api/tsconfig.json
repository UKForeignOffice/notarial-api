{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "ES2020.Promise",
      "ES2019.Object",
      "ES2019.Array",
      "ES2021.Promise"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
